 <script>
  document.addEventListener('DOMContentLoaded', function () {
    const toggleButton = document.querySelector('.desc-toggle-button');
    const shortText = document.querySelector('.desc-text');
    const fullText = document.querySelector('.desc-full');

    if (!toggleButton || !shortText || !fullText) return;

    toggleButton.addEventListener('click', function () {
      const isExpanded = fullText.style.display === 'block';

      if (isExpanded) {
        fullText.style.display = 'none';
        shortText.style.display = 'block';
        toggleButton.textContent = 'Voir plus';
      } else {
        fullText.style.display = 'block';
        shortText.style.display = 'none';
        toggleButton.textContent = 'Voir moins';
      }
    });
  });
</script>