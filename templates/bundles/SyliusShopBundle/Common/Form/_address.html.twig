<style>
  /* 1) On retire la bordure générale et on ne laisse que le soulignement */
  .placeholder-dark {
    border: none !important;
    border-bottom: 1px solid rgba(16, 53, 89, 0.4) !important;
    border-radius: 0 !important;
    box-shadow: none !important;
  }

  /* 2) On colore seulement le placeholder en gris foncé */
  .placeholder-dark::-webkit-input-placeholder { color: #4a4a4a !important; }
  .placeholder-dark::-moz-placeholder          { color: #4a4a4a !important; }
  .placeholder-dark:-ms-input-placeholder      { color: #4a4a4a !important; }
  .placeholder-dark::-ms-input-placeholder     { color: #4a4a4a !important; }
  .placeholder-dark::placeholder               { color: #4a4a4a !important; }
</style>

{# 2) Votre logique Twig pour le formulaire #}
{% if type is defined %}
    {% set type = type ~ '-' %}
{% else %}
    {% set type = null %}
{% endif %}

<div class="two fields">
    {# First Name #}
    {% set ph = form.firstName.vars.label|trans ~ (form.firstName.vars.required ? ' *' : '') %}
    {{ form_row(form.firstName, {
        label: false,
        attr: {
            placeholder: ph,
            class: 'placeholder-dark',
        }
    }) }}

    {# Last Name #}
    {% set ph = form.lastName.vars.label|trans ~ (form.lastName.vars.required ? ' *' : '') %}
    {{ form_row(form.lastName, {
        label: false,
        attr: {
            placeholder: ph,
            class: 'placeholder-dark',
        }
    }) }}
</div>

<div style="display:none;">
{{ form_row(form.company, sylius_test_form_attribute(type ~ 'company')) }}
